<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.8.xsd">

    <changeSet  author="risaac"  id="00000000000001">
        <createTable tableName="payment_response">
            <column name="id"  type="VARCHAR(50)">
                <constraints  nullable="false"  primaryKey="true"  unique="true"/>
            </column>
            <column name="reconciliation_id" type="VARCHAR(100)"/>
            <column name="amount" type="DECIMAL" />
            <column name="status" type="VARCHAR(50)" />
            <column name="response_message" type="TEXT" />
            <column name="submitted" type="TIMESTAMP"/>
            <column name="error_reason" type="VARCHAR(50)" />
            <column name="error_message" type="TEXT" />
            <column name="error_details" type="TEXT" />

        </createTable>
    </changeSet>

</databaseChangeLog>